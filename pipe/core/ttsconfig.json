{
  "$schema": "https://schemastore.azurewebsites.net/schemas/json/tsconfig.json",
  "extends": "./tsconfig.json",
  "include": ["build/src/**/*"],
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "allowJs": false,
    "baseUrl": "./",
    "paths": {
      "~/*": ["../../package/src/*"],
      "shell-parser/src/*": ["../../*"]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ]
  }
}
