{
  "$schema": "https://schemastore.azurewebsites.net/schemas/json/tsconfig.json",
  "extends": "./tsconfig.json",
  "include": ["build/src/**/*"],
  "compilerOptions": {
    "baseUrl": "./build/src",
    "paths": {
      "~/*": ["*"]
    },
    "noEmit": false,
    "declaration": true,
    "allowJs": false,
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ]
  }
}
