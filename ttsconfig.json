{
  "$schema": "https://schemastore.azurewebsites.net/schemas/json/tsconfig.json",
  "extends": "./tsconfig.json",
  "include": ["src/**/*"],
  "compilerOptions": {
    "paths": {
      "~/*": ["src/*"],
      "lib/*": ["src/lib/*"]
    },
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowJs": false,
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ]
  }
}
